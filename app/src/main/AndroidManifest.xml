<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Define activities -->
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.LoginActivity"
            android:parentActivityName=".activities.LoginActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activities.LoginResultActivity"
            android:parentActivityName=".activities.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settingsPage"
            android:parentActivityName=".activities.LoginActivity" />
        <activity
            android:name=".activities.ScrollViewActivity"
            android:parentActivityName=".activities.LoginActivity"
            android:label="@string/title_activity_settings_activity2" />

        <!-- Define services -->
        <service
            android:name=".services.ServiceDemo"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.myapplication.services.ServiceDemo" />
            </intent-filter>
        </service>


    </application>

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission." />

</manifest>
